"#sets
"##color schem
set t_Co=256
colorscheme molokai
filetype indent plugin on
syntax on
"##Vi Compatibility mode
set nocompatible
"##Better commands line completion
set wildmenu
"##highlight searches
set hlsearch
"##use case insensitive search, except when using capital letters
set ignorecase
set smartcase
"##auto indent
set autoindent
"##display the cursor position
set ruler
"##useing visual bell
set visualbell
"##
set t_vb=
"##enable use of the mouse for all modes
set mouse=a
"##Display line numbers 
set number
"##indentation settings
set shiftwidth=2
set softtabstop=2
set expandtab
